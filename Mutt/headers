# unset all headers
unmy_hdr *

# define my own headers
set hdrs

my_hdr X-GPG-Key: curl https://keybase.io/reyu/pgp_keys.asc | gpg --import
my_hdr X-PGP-Fingerprint: FBBD 211D 9F86 1622 8ED9 7872 8018 EC2B 71F1 FEFA
my_hdr X-Editor: `nvim --version | head -n 1`
my_hdr User-Agent: `neomutt -v | head -n 1 ` (`uname -a | tr -s ' ' ' ' | cut -d ' ' -f1,3 | tr ' ' ' '`)

